@model IEnumerable<IdentityRole>
@{
	ViewData["Title"] = "RolesList";
}

<h1>Roles List</h1>
<a asp-action="CreateRole" class="btn btn-success">Create Role</a>
@if (Model.Any())
{
	<table class="table table-striped table-hover table-bordered">
		<tr>

			<td> @Html.DisplayNameFor(x => x.Id)</td>
			<td>  @Html.DisplayNameFor(x => x.Name)</td>
			<td>Operations</td>
		</tr>
		@foreach (var role in Model)
		{

			<tr>
				<td>
					@role.Id
				</td>
				<td>
					@role.Name
				</td>
				<td>
					<a asp-action="EditRole"  asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
					<a asp-action="DeleteRole" class="btn btn-warning">Delete</a>

				</td>
			</tr>
		}

		
	</table>
}
else
{
	<div class=" alert alert-danger">
		No Roles in this list
		<a asp-action="CreateRole" class="btn btn-success">Create Role</a>
	</div>
}